generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clientEnterprise {
  id                                String                   @id @default(uuid())
  enterprise                        String
  fieldExpertise                    String
  colaboratorName                   String
  colaboratorSurname                String
  colaboratorEmail                  String  
  position                          String
  administrationPerception          String
  personalFamilyRelationsComment    String
  organizationalStructureDefined    String
  knowsMissionVisionCriticalFactors String
  educationLevel                    EducationLevel
  managementAdjustsStructure        String
  hasPerformanceEvaluationPolicy    String
  hasHRManagementIndicators         String
  investsInTrainingPrograms         String
  performance360Evaluation          Performance360Evaluation
  remunerationPolicyCompetitive     String
  performanceRewardExists           String
  managementExperience              ManagementExperience
  goalsMethodology                  String?
  hasClearCompetencies              String
  improvementSuggestions            String
}

enum EducationLevel {
  ENSINO_FUNDAMENTAL
  ENSINO_MEDIO
  ENSINO_SUPERIOR
}

enum Performance360Evaluation {
  YES
  NO
  NOT_APPLICABLE
}

enum ManagementExperience {
  ONE_TO_FIVE_YEARS
  SIX_TO_TEN_YEARS
  MORE_THAN_TEN_YEARS
}
